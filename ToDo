const fileInput = document.querySelector('input[type="file"]');
const existingFile = new File(['content'], 'example.txt', { type: 'text/plain' }); // Or your existing File object
const dataTransfer = new DataTransfer();
dataTransfer.items.add(existingFile);
fileInput.files = dataTransfer.files; // Assigns the FileList
